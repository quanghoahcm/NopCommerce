<div class="forum-search-box">
    @using (Html.BeginRouteForm("Search", FormMethod.Get))
    {
        var searchText = T("Forum.SearchForumsTooltip");
        <div class="basic">
            <form class="form-search">
                <div class="form-group">
                @Html.TextBox("searchterms", searchText, new { @class = "input-medium search-query form-control", onclick = String.Format("if(this.value=='{0}')this.value=''", searchText), onblur = String.Format("if(this.value=='')this.value='{0}';", searchText) })
                 </div>
                <input type="submit" value="" class="btn search-box-button" />
            </form>
        </div>
        <div class="advanced">
            @Html.RouteLink(T("Forum.AdvancedSearch").Text, "Search", new { adv = true }, new { title = T("Forum.AdvancedSearch").Text })
        </div>
    }
        
</div>