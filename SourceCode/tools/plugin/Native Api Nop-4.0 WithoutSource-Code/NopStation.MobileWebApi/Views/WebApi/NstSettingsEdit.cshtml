@model BS.Plugin.NopStation.MobileWebApi.Models.NstSettingsModel.Nst_ConfigurationSettings
@{
    Layout = "_AdminLayout";
}
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using System.Globalization;
@await Component.InvokeAsync("StoreScopeConfiguration")
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()
    <div class="raw form-horizontal clearfix">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>@T("Plugins.NopMobile.WebApi.NST")</strong>
                    </div>
                    <div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-9">
                                    @Html.HiddenFor(model => model.EditMode,new {@value=true})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="NST_KEY" />
                                    @*@Html.NopLabelFor(model => model.NST_KEY)*@
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.NST_KEY)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="NST_SECRET" />
                                    @*@Html.NopLabelFor(model => model.NST_SECRET)*@
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.NST_SECRET)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
 }






