@model BS.Plugin.NopStation.MobileWebApi.Models.NstSettingsModel.Nst_ConfigurationSettings
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using System.Globalization;
@await Component.InvokeAsync("StoreScopeConfiguration")
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()
    <div class="raw form-horizontal clearfix">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>@T("Plugins.NopMobile.WebApi.NST")</strong>
                    </div>
                    <div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                  
                                      <nop-label asp-for="NST_KEY" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="NST_KEY" readonly = "readonly" />
                                   
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="NST_SECRET" />
                                    
                                </div>
                                <div class="col-md-9">
                                    @*@Html.TextBoxFor(model => model.NST_SECRET, new {@readonly = "readonly"})*@
                                    <nop-editor asp-for="NST_SECRET" readonly = "readonly" />
                                    <span asp-validation-for="NST_SECRET"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <input type="button" value="Edit" class="btn bg-blue" onclick="location.href = '@Url.Action("NopStationSecrateTokenEdit", "MobileWebApiConfiguration")'"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
 }






